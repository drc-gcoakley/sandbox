
CLIENT=la
ENV=prod
SERVERS="$(prod-servers)"
done=false

while [ $done = "false" ]; do
    case "$1" in
        [lL][aA]) CLIENT=la; shift ;;
        [nN][eE]) CLIENT=ne; shift ;;

        [pP][rR]*) ENV=prod;    SERVERS=$(prod-servers); shift ;;
        [sS][qQ]*) ENV=sqa;     SERVERS=$(sqa-servers); shift ;;
        [sS][tT]*) ENV=staging; SERVERS=$(staging-servers); shift ;;

        *) done=1 ;;
    esac
done

unset done

