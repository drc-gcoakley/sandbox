# Retrieves the current state of the given  upstream branch and force-pushes it to 
# the same branch name on origin.  Then, this checks out the branch from origin.
BRANCH=$1
if [ -n "$BRANCH" ]; then
    git checkout upstream/$BRANCH
    # The workspace branch should now have a detached HEAD.
    # Push it to my fork using the remote 'origin'.
    git push -f origin $BRANCH
    git checkout $BRANCH
else
    echo "Usage: `basename $0` <branch-name>"
fi
