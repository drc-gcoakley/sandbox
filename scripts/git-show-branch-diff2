# Compare the 'integration' and current branches.
# http://stackoverflow.com/questions/1527234/finding-a-branch-point-with-git
# http://stackoverflow.com/questions/1527234/finding-a-branch-point-with-git/4991675#4991675

CURRENT_BRANCH=${1:-`git-current-branch`}
PARENT_BRANCH=integration
BRANCH_BASE=`diff -u < $(git rev-list --first-parent $CURRENT_BRANCH) \
          < $(git rev-list --first-parent $PARENT_BRANCH) | \
      sed -ne 's/^ //p' | head -1`
git diff $BRANCH_BASE
